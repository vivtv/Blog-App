            <!-- Comment Form -->
            <div class="mb-8">
                <form id="commentForm">
                    <input type="hidden" id="blogId" value="<%= blog.idblog %>">
                    <div class="grid md:grid-cols-2 gap-4 mb-4">
                        <input type="text" id="commentName" placeholder="Your Name" required
