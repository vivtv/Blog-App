                        <input type="email" id="commentEmail" placeholder="Your Email" required
                            class="w-full p-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent">
                    </div>
                    <input type="url" id="commentWebsite" placeholder="Your Website (optional)"
                        class="w-full p-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent mb-4">
                    <textarea 
                        id="commentMsg" 
                        placeholder="Share your thoughts about this article..." 
                        class="w-full p-4 border border-gray-200 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent resize-none"
                        rows="3" required></textarea>
                    <div class="flex justify-end mt-3">
                        <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white px-6 py-2 rounded-lg font-medium transition-colors">
                            Post Comment
                        </button>
                    </div>
                </form>
            </div>

            <!-- Comments List -->
            <div class="space-y-6">
                <% if (comments && comments.length > 0) { %>
                    <% comments.forEach(function(comment) { %>
                    <div class="flex space-x-4">
                        <div class="w-10 h-10 bg-sky-200 rounded-full flex items-center justify-center flex-shrink-0">
                            <span class="text-sky-600 font-medium text-sm"><%= comment.comment_name.charAt(0).toUpperCase() %></span>
                        </div>
                        <div class="flex-1">
                            <div class="bg-gray-50 rounded-lg p-4">
                                <div class="flex items-center justify-between mb-2">
                                    <h4 class="font-medium text-gray-800"><%= comment.comment_name %></h4>
                                    <% if (comment.comment_website) { %>
                                        <a href="<%= comment.comment_website %>" target="_blank" class="text-sm text-sky-600 hover:text-sky-700">Website</a>
                                    <% } %>
                                </div>
                                <p class="text-gray-700"><%= comment.comment_msg %></p>
                            </div>
                            <div class="flex items-center mt-2 space-x-4">
                                <button class="text-sm text-gray-500 hover:text-sky-600 transition-colors">üëç Like</button>
                                <button class="text-sm text-gray-500 hover:text-sky-600 transition-colors reply-btn" data-comment-id="<%= comment.idcomment %>">Reply</button>
                            </div>
                            
                            <!-- Reply Form (Hidden by default) -->
                            <div class="reply-form hidden mt-4 ml-4">
                                <form class="reply-form-inner">
                                    <input type="hidden" class="comment-id" value="<%= comment.idcomment %>">
                                    <div class="grid md:grid-cols-2 gap-4 mb-4">
                                        <input type="text" class="reply-name" placeholder="Your Name" required
                                            class="w-full p-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent">
                                        <input type="email" class="reply-email" placeholder="Your Email" required
                                            class="w-full p-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent">
                                    </div>
                                    <textarea class="reply-msg" placeholder="Write a reply..." required
                                        class="w-full p-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-sky-500 focus:border-transparent resize-none" rows="2"></textarea>
                                    <div class="flex justify-end mt-3 space-x-2">
                                        <button type="button" class="cancel-reply bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm transition-colors">Cancel</button>
                                        <button type="submit" class="bg-sky-500 hover:bg-sky-600 text-white px-4 py-2 rounded-lg text-sm transition-colors">Post Reply</button>
                                    </div>
                                </form>
                            </div>
                            
                            <!-- Replies -->
                            <% if (comment.replies && comment.replies.length > 0) { %>
                                <div class="ml-4 mt-4 space-y-4">
                                    <% comment.replies.forEach(function(reply) { %>
                                    <div class="flex space-x-3">
                                        <div class="w-8 h-8 bg-gray-200 rounded-full flex items-center justify-center flex-shrink-0">
                                            <span class="text-gray-600 font-medium text-xs"><%= reply.reply_name.charAt(0).toUpperCase() %></span>
                                        </div>
                                        <div class="flex-1">
                                            <div class="bg-gray-100 rounded-lg p-3">
                                                <div class="flex items-center justify-between mb-1">
                                                    <h5 class="font-medium text-gray-800 text-sm"><%= reply.reply_name %></h5>
                                                </div>
                                                <p class="text-gray-700 text-sm"><%= reply.reply_msg %></p>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    <% }); %>
                <% } else { %>
                    <div class="text-center py-8">
                        <p class="text-gray-500">No comments yet. Be the first to comment!</p>
                    </div>
                <% } %>
            </div>

            <div class="text-center mt-6">
                <button class="text-sky-600 hover:text-sky-700 font-medium">Load More Comments</button>
            </div>
        </section>

        <!-- Related Articles -->
