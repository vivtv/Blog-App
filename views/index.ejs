<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkyBlog - Your Personal Blog</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'inter': ['Inter', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="font-inter bg-gradient-to-br from-sky-100 via-blue-50 to-indigo-100 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-white/80 backdrop-blur-md shadow-sm sticky top-0 z-50">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <h1 class="text-2xl font-bold text-sky-600"><a href="index.html">SkyBlog</a></h1>
                </div>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-8">
                        <a href="#" class="text-gray-700 hover:text-sky-600 px-3 py-2 rounded-md text-sm font-medium transition-colors">Home</a>
                        <a href="#" class="text-gray-700 hover:text-sky-600 px-3 py-2 rounded-md text-sm font-medium transition-colors">About</a>
                        <a href="#" class="text-gray-700 hover:text-sky-600 px-3 py-2 rounded-md text-sm font-medium transition-colors">Categories</a>
                        <a href="#" class="text-gray-700 hover:text-sky-600 px-3 py-2 rounded-md text-sm font-medium transition-colors">Contact</a>
                    </div>
                </div>

                <% if (typeof user === "undefined" || !user) { %>
                <button class="bg-sky-500 hover:bg-sky-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" onclick="location.href='/login'">
                    Sign In
                </button>
                <% } else { %> 
                <div class="flex items-center space-x-3">
                    <button class="bg-sky-500 hover:bg-sky-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors" onclick="location.href='/post_blog'">
                        Write Post
                    </button>
                    <button class="border border-sky-500 text-sky-600 hover:bg-sky-50 px-4 py-2 rounded-lg text-sm font-medium transition-colors" onclick="location.href='/logout'">
                        Logout
                    </button>
                </div>
                <% } %>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="py-16 px-4 sm:px-6 lg:px-8">
        <div class="max-w-4xl mx-auto text-center">
            <h2 class="text-4xl md:text-6xl font-bold text-gray-800 mb-6">
                Welcome to <span class="text-sky-600">SkyBlog</span>
            </h2>
            <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
                Discover amazing stories, insights, and ideas from our community of writers. Share your thoughts with the world.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button class="bg-sky-500 hover:bg-sky-600 text-white px-8 py-3 rounded-lg font-medium transition-colors">
                    Start Reading
                </button>
                <button class="border-2 border-sky-500 text-sky-600 hover:bg-sky-500 hover:text-white px-8 py-3 rounded-lg font-medium transition-colors">
                    Join Community
                </button>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">

        <!-- Blog Posts Grid -->
        <section>
            <div class="flex justify-between items-center mb-8">
                <h3 class="text-2xl font-bold text-gray-800">Latest Posts</h3>
                <div class="flex gap-2">
                    <button class="bg-sky-500 text-white px-4 py-2 rounded-lg text-sm font-medium">All</button>
                    <button class="text-gray-600 hover:text-sky-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors">Tech</button>
                    <button class="text-gray-600 hover:text-sky-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors">Design</button>
                    <button class="text-gray-600 hover:text-sky-600 px-4 py-2 rounded-lg text-sm font-medium transition-colors">Lifestyle</button>
                </div>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% if (blogs && blogs.length > 0) { %>
                    <% blogs.forEach(function(blog, index) { %>
                    <article class="bg-white/70 backdrop-blur-sm rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow group">
                        <div class="h-48 bg-gradient-to-br from-sky-200 to-blue-300 flex items-center justify-center">
                            <% if (blog.blog_image) { %>
                                <img src="<%= blog.blog_image %>" alt="Blog image" class="w-full h-full object-cover">
                            <% } else { %>
                                <span class="text-5xl">üìù</span>
                            <% } %>
                        </div>
                        <div class="p-6">
                            <div class="flex items-center mb-3">
                                <span class="bg-sky-100 text-sky-600 px-2 py-1 rounded-full text-xs font-medium"><%= blog.category_title || 'General' %></span>
                                <span class="text-gray-500 text-xs ml-3"><%= new Date(blog.blog_datetime).toLocaleDateString() %></span>
                            </div>
                            <h4 class="text-lg font-semibold text-gray-800 mb-3 group-hover:text-sky-600 transition-colors">
                                <%= blog.blog_title %>
                            </h4>
                            <p class="text-gray-600 text-sm mb-4"><%= blog.blog_detail.replace(/<[^>]*>/g, '').substring(0, 100) %>...</p>
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-sky-200 rounded-full flex items-center justify-center">
                                        <span class="text-sky-600 text-xs font-medium"><%= (blog.first_name || 'U').charAt(0) %></span>
                                    </div>
                                    <span class="text-sm text-gray-600 ml-2"><%= blog.first_name %> <%= blog.last_name %></span>
                                </div>
                                <button class="text-sky-600 hover:text-sky-700 text-sm font-medium" onclick="location.href='/blogs/read/<%= blog.idblog %>'">Read ‚Üí</button>
                            </div>
                        </div>
                    </article>
                    <% }); %>
                <% } else { %>
                    <div class="col-span-full text-center py-12">
                        <p class="text-gray-500 text-lg">No blog posts found. <a href="/post_blog" class="text-sky-600 hover:text-sky-700">Write the first one!</a></p>
                    </div>
                <% } %>
            </div>

            <!-- Load More Button -->
            <div class="text-center mt-12">
                <button class="bg-white/70 hover:bg-white text-sky-600 border-2 border-sky-200 hover:border-sky-300 px-8 py-3 rounded-lg font-medium transition-all backdrop-blur-sm">
                    Load More Posts
                </button>
            </div>
        </section>
    </main>

    <!-- Footer -->
    <footer class="bg-white/60 backdrop-blur-md border-t border-sky-100 mt-16">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="grid md:grid-cols-4 gap-8">
                <div class="md:col-span-2">
                    <h3 class="text-2xl font-bold text-sky-600 mb-4">SkyBlog</h3>
                    <p class="text-gray-600 mb-4">A beautiful platform for sharing stories, insights, and connecting with fellow writers and readers.</p>
                    <div class="flex space-x-4">
                        <button class="w-10 h-10 bg-sky-100 hover:bg-sky-200 text-sky-600 rounded-full flex items-center justify-center transition-colors">
                            <span class="text-sm font-bold">f</span>
                        </button>
                        <button class="w-10 h-10 bg-sky-100 hover:bg-sky-200 text-sky-600 rounded-full flex items-center justify-center transition-colors">
                            <span class="text-sm font-bold">t</span>
                        </button>
                        <button class="w-10 h-10 bg-sky-100 hover:bg-sky-200 text-sky-600 rounded-full flex items-center justify-center transition-colors">
                            <span class="text-sm font-bold">in</span>
                        </button>
                    </div>
                </div>
                <div>
                    <h4 class="font-semibold text-gray-800 mb-4">Quick Links</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-600 hover:text-sky-600 transition-colors">About Us</a></li>
                        <li><a href="#" class="text-gray-600 hover:text-sky-600 transition-colors">Write for Us</a></li>
                        <li><a href="#" class="text-gray-600 hover:text-sky-600 transition-colors">Categories</a></li>
                        <li><a href="#" class="text-gray-600 hover:text-sky-600 transition-colors">Newsletter</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-semibold text-gray-800 mb-4">Support</h4>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-600 hover:text-sky-600 transition-colors">Help Center</a></li>
                        <li><a href="#" class="text-gray-600 hover:text-sky-600 transition-colors">Contact Us</a></li>
                        <li><a href="#" class="text-gray-600 hover:text-sky-600 transition-colors">Privacy Policy</a></li>
                        <li><a href="#" class="text-gray-600 hover:text-sky-600 transition-colors">Terms of Service</a></li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-sky-100 mt-8 pt-8 text-center">
                <p class="text-gray-600">&copy; 2024 SkyBlog. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        // Category filter functionality
        const categoryButtons = document.querySelectorAll('button[class*="px-4 py-2 rounded-lg text-sm font-medium"]');
        const blogPosts = document.querySelectorAll('article');

        categoryButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active state from all buttons
                categoryButtons.forEach(btn => {
                    btn.classList.remove('bg-sky-500', 'text-white');
                    btn.classList.add('text-gray-600', 'hover:text-sky-600');
                });
                
                // Add active state to clicked button
                this.classList.add('bg-sky-500', 'text-white');
                this.classList.remove('text-gray-600', 'hover:text-sky-600');
                
                // Simple filter simulation (in a real app, this would filter actual content)
                const category = this.textContent.toLowerCase();
                console.log(`Filtering by category: ${category}`);
            });
        });

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Load more posts functionality
        const loadMoreBtn = document.querySelector('button:contains("Load More Posts")');
        if (loadMoreBtn) {
            loadMoreBtn.addEventListener('click', function() {
                this.textContent = 'Loading...';
                setTimeout(() => {
                    this.textContent = 'Load More Posts';
                    console.log('More posts would be loaded here');
                }, 1000);
            });
        }
    </script>
